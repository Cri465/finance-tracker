<h1>My portfolio</h1>
<div class="search-area">
  <h3>search stocks</h3>
  <%=form_tag search_stock_path, remote: true, method: :get do%>
    <div class="form-group row">
      <div class="col-sm-9 pr-0">
        <%=text_field_tag :stock, params[:stock], placeholder: "Stock ticker symbol", autofocus:true, class: "form-control form-control-lg"%>
      </div>
      <div class="col-sm-3 pl-0">
        <%=button_tag type: :submit, class: "btn btn-success" do%>
          <%=fa_icon 'search 2x'%>
        <%end%>
      </div>
    </div>
  <%end%>
</div>
<div id="results">
</div>
<div class="row">
  <div class="col-9 pr-0">
    <%if !@tracked_stocks.empty?%>
      <%=render 'layouts/stocks-table'%>
    <%else%>
      <h4 class="pt-3">You are not currently tracking any stocks</h4>
    <%end%>
  </div>
</div>
